      <script>
        var navbar = false;

        $('header').addClass("nav_closed");

function clickmenu(){
  if(navbar == false){
    opennavbar();
    navbar = true;
  }
  else{
    closenavbar();
    navbar = false;
  }
}

function opennavbar(){
  $('.navbarback').css({
  "display" : 'block', // couleur rouge
  "animation" : 'animnavbar1 0.5s',
  });
  $('.navbar').css({
  "display" : 'block', // couleur rouge
  "animation" : 'animnavbarOpen 0.5s',
  });
  $('.navbar a').css({
  "opacity" : '1',
  "animation" : 'animnavbaraOpenOpa 0.5s'
  });
  $('header').removeClass("nav_closed");
  $('header').addClass("nav_open");
}
function closenavbar(){
  $('.navbar').css({
  "animation" : 'animnavbarclose 0.5s',
  });
  $('.navbarback').css({
  "animation" : 'animnavbarcloseopacity 0.5s',
  });
  $('.linknav').css({
  "opacity" : '0',
  "animation" : 'animnavbaracloseOpa 0.5s',
  });
  $('header').addClass("nav_closed");
  $('header').removeClass("nav_open");
    setTimeout( function() {
        closenavbardisplaynone();
    }, 500 );
  function closenavbardisplaynone(){
    $('.navbarback').css({
    "display" : 'none', // couleur rouge
    });
    $('.navbar').css({
    "display" : 'none', // couleur rouge
    });

  }

}

      </script>

