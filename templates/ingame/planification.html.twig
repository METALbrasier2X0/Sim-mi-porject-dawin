{% extends 'base.html.twig' %}

{% block title %}Phase Préparation{% endblock %}

{% block body %}
 <style>
    body{
      margin: 0;
      padding: 0;
    }

.container {
   width: 100%;
   height: 100%;
   max-width: 800px;
   margin: 0 auto;
  color: #27476E;
}

.box{
  width: 300px;
}
ul.sortable {
   display: block;
   list-style: none;
   margin: 20px 0;
   padding: 5px;
   width: 350px;
   height: 350px;
   overflow-y: scroll;
   background-color: #f8f9f9;
}
.sortable > li{
  box-shadow: 0px 0px 2px grey;
  margin: 10px;
  width: 300px;
  background-color: white;
  border-radius: 30px;
  padding: 5px;
}
.sortable > li:hover{
  box-shadow: 0px 2px 3px grey;
}
#sbtn-1{
  display: none;
}
#sbtn-2{
  display: none;
}
.dragAndDrop{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
}
#btn-validation{
  display: block;
  float:right;
}
.event-drop-info{
  font-size: 50px;
  margin: 0px 40px;
  width: 100px;
}
.event-drop-info i{
  color: #ECA400;
  font-size: 50px;
}

.event-drop-info p{
  color: #ECA400;
  text-align: center;
  font-size: 16px;
}
.dragAndDrop h3{
  color: #006992;
}
.bBlue1{
  background-color: #006992;
  border: solid 1px #006992;
  color: white;
  transition: 0.2s;
}
.bBlue1:hover{
  background-color: white;
  color: #006992;
  transition: 0.2s;
}
.button{
  margin: 5px;
  padding: 5px 30px;
  font-size: 16px;
  font-family: 'Montserrat', sans-serif;
  border-radius: 5px;
  cursor: pointer;
}
.button:active{
  margin: 0px;
  padding: 10px 35px;
}
#msg-error{
  color: red;
  text-align: right;
}

.container-button{
  width:100%;
  height:50px;
  margin:10px auto;
}

.titre-planification{
  font-size: 35px;
  padding: 10px 0px;
}
.text-planification{
  padding: 20px 0px;
}
.barre{
  height: 3px;
  width: 150px;
  background-color: #ECA400;
}
  </style>
    <div class="conteneur">
      <h1 class="titre-planification">Phase de preparation</h1>
      <div class="barre"></div>
      <p class="text-planification">Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.</p>
      <div class="container">
          <div class="dragAndDrop">
            <div>
              <h3>Liste des Events</h3>
              <ul id="list-1" class="sortable">
                {% for Etape in Etapes|shuffle %}
                <li id="item-{{ Etape.id }}" class="box">{{Etape.name}}</li>
                {% endfor %}
              </ul>
              <button id="sbtn-1" type="button">Serialize</button>
          </div>
          <div class="event-drop-info">
            <i class="fas fa-arrow-circle-right"></i>
            <p>Choisir 5 étapes</p>
          </div>
          <div>
              <h3>Choisir des events</h3>
              <ul id="list-2" class="sortable">

              </ul>
              <button id="sbtn-2" type="button">Serialize</button>
          </div>
        </div>
        <span id="msg-error"></span>
        <div class="container-button">
          <button id="btn-validation" class="button bBlue1">Valider</button>
        </div>
      </div>
    </div>
    <script type="text/javascript" src="public/js/dragdrop.js"></script>
{% endblock %}

{% block footer %} <div> <h2></h2> </div>{% endblock %}

{% block javascripts %}
  <script>
    var intro = {
        header:"Bienvenue!",
        text:"Arrangez les étapes dans l'ordre",
        buttons: [{t:"Allons-y!",f:close_modal}]
    }

    open_modal(intro,false);
  </script>
{% endblock %}
